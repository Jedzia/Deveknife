<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="EitView.MainWindow"
        Title="MainWindow" Height="800" Width="800" Loaded="WindowLoaded">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.121*"/>
    		<RowDefinition Height="0.447*"/>
    		<RowDefinition Height="0.252*"/>
    		<RowDefinition Height="0.18*"/>
    	</Grid.RowDefinitions>
        <TextBox  x:Name="textBox1" Grid.Row="3" TextWrapping="WrapWithOverflow" VerticalScrollBarVisibility="Auto" />
        <RichTextBox x:Name="rtb" Grid.Row="1" VerticalScrollBarVisibility="Auto" Grid.RowSpan="2">
        	<FlowDocument>
        		<Paragraph><Run Text=""/></Paragraph>
        	</FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
